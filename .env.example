# Global settings
NODE_ENV=development

# Orchestrator
API_PORT=3000
API_HOST=0.0.0.0
LOG_LEVEL=info
PRETTY_LOGS=true

# Sidecar
SIDECAR_PORT=3100
SIDECAR_HOST=0.0.0.0

# Request logging controls
REQUEST_VERBOSE=false           # true -> debug blocks with id/ip and optional headers
REQUEST_LOG_HEADERS=false       # true -> include a safe subset of headers (no auth/cookies)
REQUEST_SAMPLE=1                # N -> log every Nth request (sampling)
